        $node->otherArticles .= '<div class="next">' . l('NEXT POST', 'node/' . $next->nid, array('attributes' => array('title' => $next->title))) . '<span></span></div>';
      }

      
      if ($node->otherArticles) {
        $node->otherArticles = '<div id="other-articles">' . $node->otherArticles . '</div>';
      }
      
      //dpm($node->otherArticles);
      
      global $user;
      if (isset($_GET['disqus'])) {
