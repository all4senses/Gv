/**
 * Custom submit of a form for a Quote Requests List page.
 *
 * Provides a filtering functionality.
 * 
 * @param array &$form
 *   Array with declared form.
 *
 * @param array &$form_state
 *   Array with current form state.

 * @return void
 *   Return nothing.
 */
function gv_pages_trackClickReport_formValidate(&$form, &$form_state) {

  //dpm($form_state['values']);
  $get = $_GET;
  unset($get['q']);
  if (isset($get['provider'])) {
    unset($get['provider']);
  }
  
  if (isset($get['date_from'])) {
    unset($get['date_from']);
  }
  if (isset($get['date_to'])) {
    unset($get['date_to']);
  }
  if (isset($get['include_logged_in'])) {
    unset($get['include_logged_in']);
  }
  
  
  $get['stat_type'] = !empty($form_state['values']['stat_type']) ? $form_state['values']['stat_type'] : 'full';
  $prev_stat_type = empty($_GET['stat_type']) ? 'full' : $_GET['stat_type'];
  
  // Reset sort option in case of changing the type of statistics.
  if ( ($prev_stat_type == 'full' && $get['stat_type'] == 'per_provider') || ($prev_stat_type == 'per_provider' && $get['stat_type'] == 'full') ) {
    unset($get['sort'], $get['order']);
  }
    
  if (!empty($form_state['values']['include_logged_in'])) {
    $get['include_logged_in'] = 1;
  }
  
  $get['only_featured'] = @$form_state['values']['only_featured'];
  
  $get['filter'] = $form_state['values']['filter'];
  
  if (!empty($form_state['values']['provider']) && $form_state['values']['provider'] != '_none') {
    $get['provider'] = $form_state['values']['provider'];
  }
  
  if (!empty($form_state['values']['date_from'])) {
    $from_str = $form_state['values']['date_from'];
    if (!empty($form_state['values']['time_from'])) {
      $from_str .= 'T' . $form_state['values']['time_from'];
    }
    //$from_str = str_replace('/', '-', $from_str);
    //dpm('$from_str: ' . $from_str);
    $get['date_from'] = strtotime($from_str);
    
    //dpm(date('D, d M Y H:i:s', $get['date_from']));
  }

  if (!empty($form_state['values']['date_to'])) {
    $to_str = $form_state['values']['date_to'];
    if (!empty($form_state['values']['time_to'])) {
      $to_str .= 'T' . $form_state['values']['time_to'];
    }
    //$to_str = str_replace('/', '-', $to_str);
    //dpm('$to_str: ' . $to_str);
    $get['date_to'] = strtotime($to_str);
    
    //dpm(date('D, d M Y H:i:s', $get['date_to']));
    if (!empty($get['date_from']) && !empty($get['date_to']) && $get['date_from'] > $get['date_to']) {
      unset($get['date_to']);
      drupal_set_message('Wrong Date-To value! It can\'t be less than Date-From! So the wrong Date-To date has been excluded.', 'error');
    }
    
  }  
  
  //dpm($get);
  
  drupal_goto($_GET['q'], array('query' => $get));
}


