/**
 * Implements hook_node_view().
 *
 * @return void
 *   Return nothing.
 */
function gv_pages_node_view($node, $view_mode) {

  switch ($node->type) {
    
    case 'article':
    case 'blog_post':
    case 'news_post':
           
      if ($view_mode != 'full') {
        return;
      }
      
      $extra_data = unserialize($node->field_extra_data['und'][0]['value']);
      

      // Explicitely add css for exit intent blocks, because they are not pulled when called in template files
      if(!empty($extra_data['show_exit_intent_v2'])) {
        //$node->exit_intent = gv_blocks_get_exitIntent_v2();
        drupal_add_css(path_to_theme() . '/css/exit-intent-v2.css', array('group' => CSS_DEFAULT, 'every_page' => FALSE)); 
      }
      elseif (!empty($extra_data['show_exit_intent_v3'])) {
        //$node->exit_intent = gv_blocks_get_exitIntent_v3();
        drupal_add_css(path_to_theme() . '/css/exit-intent-v2.css', array('group' => CSS_DEFAULT, 'every_page' => FALSE)); 
      }

      //drupal_add_css(path_to_theme() . '/css/exit-intent-v2.css', array('group' => CSS_DEFAULT, 'every_page' => FALSE)); 
      
      // multistep form and exit intent specific using functionality.
      //exitIntent-ppc-bu
      ////drupal_add_css(path_to_theme() . '/css/exit-intent-v2.css', array('group' => CSS_DEFAULT, 'every_page' => TRUE));
//      $css = drupal_add_css(path_to_theme() . '/css/exitIntent-ppc-bu.css', array('group' => CSS_DEFAULT, 'every_page' => TRUE));
//      dpm($css);
      
      // Define  prev and next post for the mobile version.
      $node->otherArticles = NULL;

      
      $data = db_select('node', 'n')
          ->fields('n', array('nid', 'title'))
          ->condition('created', $node->created, '<')
          ->condition('type', $node->type)    
          ->condition('status', 1)
          ->orderBy('created', 'DESC')
          ->range(0, 1)
          ->execute();
      if ($prev = $data->fetchObject()) {
        //dpm('prev = ' . l('prev ' . $prev->title, 'node/' . $prev->nid));
        //$node->otherArticles .= '<div class="prev">' . l($prev->title, 'node/' . $prev->nid) . '</div>';
