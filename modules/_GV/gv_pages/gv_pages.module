  //dpm($form); dpm($form_state['values']);
  
  $tags_array = unserialize($form_state['values']['tags_array']);
  $tags_to_delete = array();
  foreach ($form_state['values']['tags'] as $tid => $value) {
    if ($value) {
      $tags_to_delete[$tid] = $tags_array[$tid]->name;
